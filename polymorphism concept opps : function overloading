#include <iostream>
using namespace std;

class Sum {
public:
    void add(int x, int y) {
        int sum = x + y;
        cout << sum << endl;
    }

    void add(int x, int y, int z) {
        int sum = x + y + z;
        cout << sum << endl;
    }

    void add(float x, float y) {
        float sum = x + y;
        cout << sum << endl;
    }
};

int main() {
    Sum s;
    s.add(2, 4);        // Corrected to pass two integer arguments
    s.add(2, 4, 9);     // Corrected to pass three integer arguments
    s.add(2.2f, 4.4f);  // Corrected to pass two float arguments with 'f' for float literals
    
    return 0;
}
